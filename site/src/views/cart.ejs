<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Carrito de Compras'}) %>

<body>
    <!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->
    
    <!-- Main -->
    <main class="cart">
        <form action="POST">
            <div class="cart-header row spc-btw content-padding">
                <div class="cart-titles">
                    <h1>Carrito de compras</h1>
                    <h2>Cantidad de recetas: 8</h2>
                    <p>Total: $500</p>
                </div>
                <input type="submit" value="Finalizar compra">
            </div>
            <div class="cart-items-list">
                <div class="cart-item row spc-btw">
                    <div class="item-all-info row">
                        <img class="item-img" src="/img/equilibrado_1.jpg" alt="receta-img">
                        <div class="item-info">
                            <h3 class="item-title">Título de receta</h3>
                            <h4 class="item-plan">Plan de receta</h4>
                            <a class="item-delete" href="#"><i class="fas fa-trash-alt"></i>Quitar del carrito</a>
                            <span>Cantidad</span><input class="item-quantity" type="number" value="1" name="item-quantity" min="0">
                        </div>
                    </div>
                    <div class="item-price">
                        <div class="item-unit-price">
                            <p>Precio unitario:</p>
                            <p>$200</p>
                        </div>
                        <div class="item-subtotal-price">
                            <p>Subtotal</p>
                            <p>$400</p>
                        </div>
                    </div>
                </div>
                <div class="cart-item row spc-btw">
                    <div class="item-all-info row">
                        <img class="item-img" src="/img/vegetariano_3.jpg" alt="receta-img">
                        <div class="item-info">
                            <h3 class="item-title">Título de receta</h3>
                            <h4 class="item-plan">Plan de receta</h4>
                            <a class="item-delete" href="#"><i class="fas fa-trash-alt"></i>Quitar del carrito</a>
                            <span>Cantidad</span><input class="item-quantity" type="number" value="1" name="item-quantity" min="0">
                        </div>
                    </div>
                    <div class="item-price">
                        <div class="item-unit-price">
                            <p>Precio unitario:</p>
                            <p>$200</p>
                        </div>
                        <div class="item-subtotal-price">
                            <p>Subtotal</p>
                            <p>$400</p>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </main>
    <!-- /Main -->

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
</body>
</html>