    <section class="instructive">
        <% instructive.forEach(step => { %>
            <ul class="steps">
                <li class="title"><%= step.instruction %> </li>
                <li><img src="/img/instructivo/<%= step.image %>" alt="click"></li>
                <li class="description"><%= step.description %></li>
            </ul>
            <% }) %>
    </section>
    
