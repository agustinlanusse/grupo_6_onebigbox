<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head', { title: 'Modificar Usuario - One Big Box' }); %>
<body>
    <%- include('../partials/header-admin'); %>

    <form action="./abm-user-modificacion/<%= data.id %>" method="POST" class="recipe-update">
        <h1>Modificar receta</h1>

        <% if (typeof errors != 'undefined') { %>
            <span>
                <ul style="background-color: #ff6868; padding: 15px 20px; border-radius: 10px; width: 100%;">
                    <% errors.forEach(error => { %>
                        <li style="color: #fff; list-style: disc; margin-left: 20px; font-size: 14px;"><%= error.msg %></li>
                    <% }) %>
                </ul>
            </span>
        <% } %>

        <span>
            <i class="fas fa-utensils"></i>
            <input type="text" name="nombre" id="nombre" placeholder="Nombre del Usuario" value="<%= user.nombre %>">
        </span>

        <span>
            <i class="fas fa-sticky-note"></i>
            <input type="text" name="apellido" id="apellido" placeholder="Apellido del Usuario" value="<%= user.apellido %>">
        </span>

        <span>
            <i class="fas fa-carrot"></i>
            <input type="text" name="email" id="email" placeholder="Email del Usuario" value="<%= user.email %>">
        </span>

        <span>
            <i class="fas fa-carrot"></i>
            <input type="password" name="password" id="password" placeholder="Password del Usuario" value="<%= user.password %>">
        </span>

        <select name="admin" id="admin">
            <% if (user.admin == 0) { %>
                <option value="0" selected>USER</option>
                <option value="1">ADMIN</option>
            <% }else{ %>
                <option value="0">USER</option>
                <option value="1" selected>ADMIN</option>
            <%}%>
        </select>

        <div class="update-action-btns">
            <a href="/admin">Cancelar</a>
            <input type="submit" value="Modificar receta">
        </div>
    </form>
</body>
</html>