<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Listado de Recetas'}) %>
<body>
    <!-- Header -->
	<%- include('../partials/header-admin') %>
	<!-- /Header -->
    <section  >
        <div class = "admin-nueva-receta">
            <h2 class="title">RECETAS</h2>
            <li><a href="./recetas/abm-recetas-alta" class="btn-admin">AGREGAR NUEVA RECETA</a></li>
        </div>
        <main class="boxes lista-boxes">
            <% recetas.forEach(receta => { %>
                <div class="box box-full">
                    <ul>
                        <li><img src="/img/recetas/<%= receta.image %> " alt="<%= receta.titulo %> "></li>
                        <li class="title"><%= receta.titulo %></li>
                        
                        <li><a href="/admin/recetas/abm-recetas-modificacion/<%= receta.id %>" class="btn-admin"><i class="far fa-edit"></i> <p>Editar</p></a></li>
                        <li>
                            <form action="/admin/recetas/eliminar-receta/<%= receta.id %>" method="POST">
                                <a href="#" class="btn-admin"><i class="far fa-trash-alt"></i><p>Eliminar</p></a>
                            </form>
                        </li>
                    
                    
                    </ul>
                </div>
            <% }) %>
            
        </main>
    </section>

</body>
</html>