<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Listado de Recetas'}) %>

<body>
    <!-- Encabezado  -->
    <%- include('partials/header') %>
    <!-- Encabezado  -->
    <section class="nuestros-box">
        <!-- Valido Usuario Logueado  -->
        <% if (locals.user) { %>
            <p> USUARIO LOGUEADO: <%= locals.user.email %> </p>
        <% }else{ %>
            <p>NO HAY USUARIO LOGUEADO</p>
        <% } %>
        <!-- Valido Usuario Logueado  -->
        

            <div class="detalle-receta-conteiner" >
                <img src= "/img/recetas/<%- receta.image %>" alt= <%- receta.plan %> >
            
                <div class ="detalle-receta-content" >
                    <div>
                        <h2 class = "detalle-receta-titulo"><%- receta.titulo %></h2>
                    </div>
                    <div >
                        <p class = "detalle-receta-description"><%- receta.description %></p>
                    </div>
                    <div>
                        <h2 class = "detalle-receta-subtitulo">Ingredientes</h2>
                        <ul>
                            <% ingredientes.forEach(element => { %>
                                <li class="detalle-receta-description"> <%-element %>  </li>
                            <% }) %>
                          
                        </ul>
                    </div>
                    <div>
                        <h2 class = "detalle-receta-subtitulo">Pasos</h2>
                        <ul>
                            <% pasos.forEach(element => { %>
                                <li class="detalle-receta-description"> <%-element %>  </li>
                            <% }) %>
                            
                        </ul>
                    </div>
                    <div>
                        <h2 class = "detalle-receta-subtitulo">Tiempo de Cocci√≥n</h2>
                        <p class = "detalle-receta-description"><%- receta.tiempopreparacion %></p>
                    </div>
                </div>
            </div>
    </section>   
    <!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>
</html>